<!doctype html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.13.0/css/all.min.css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/style.css">
    <title>---</title>
</head>
<body>
    <!-- Navigation bar -->
    <nav class="navbar px-5">
        <div class="row justify-content-center" id="section-menu">
        </div>
        <button class="btn btn-light btn-rounded">
            Тех. поддержка
        </button>
    </nav>
    <div class="row container-fluid m-0">
        <!-- Text Blocks Menu -->
        <div class="col-4 p-3 pl-3 overflow-auto">
            <h1 class="pb-3 pt-4 border-bottom" id="section-name">
            </h1>
            <div class="mt-4" id="text-blocks-menu">
            </div>
            
            <!-- Variables Table -->
            <table class="table mt-5 d-none" id="variables-table">
                <thead>
                    <tr>
                        <th scope="col">Переменная</th>
                        <th scope="col">Значение</th>
                    </tr>
                </thead>
                <tbody>
                </tbody>
            </table>
        </div>
        <div class="col-8 pl-auto mb-5 mx-0 row">
            <div class="text-field px-4 py-3 mt-3 col-12" id="text-field" readonly>
            </div>
            <button type="submit" class="btn rounded-0 mt-3 copy-button btn-primary small ml-auto" id="copy-button">
                СКОПИРОВАТЬ
            </button>
        </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"></script>
    <script src="/js/script.js"></script>
</body>
</html>
